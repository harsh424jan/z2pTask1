									<input type = "radio" value = "tracks" name ="collection" onclick="populateTrack()">Tracks</label><br>
								</div>
								{{{ errors.name }}}
								{{ message }}
								<label id="f1"> Artist Name: </label>
								<input type="text" name="field1" list="l1" class="form-control" autocomplete="off">
								<datalist id ="l1" class="form-input">
								</datalist> 
								
								<label id="f2">Description: </label>
								<div class="field2">
									<input type="text" name="field2" autocomplete="off" class="form-control">
								</div>
								<label id="f3">Active Years: </label>
								<input type="text" name="field3" autocomplete="off" class="form-control"><br>
								<div class="row container-fluid">
									<input type="submit" class="btn btn-primary col-md-12" value="Submit">
								</div>
								<h4>Click to view playlists! <a href="playlist">Playlist</a></h4>
								
							</fieldset>
						</form>
					</div>
				</div>
				<div class="col-md-3"></div>

