<body onload="populateArtist()" class="container">
	<div class="row container">		
		<div class="col-md-3"></div>
		<div class="outer-wrapper">
			<div class="inner-wrapper ">
				<form class="container-fluid" style="padding-right: 380px; padding-left:380px;" id="Main" action ="/" method = "POST">
					<fieldset class="panel panel-default container-fluid">
						<h2> Add/ Update collection </h2>
						<div class="form-group">
							<label>
								<input type = "radio" value = "artist" name ="collection" checked onclick="populateArtist()">Artists </label><br>
								<label><input type = "radio" value="albums" name="collection" onclick="populateAlbum()"> Albums </label><br>
